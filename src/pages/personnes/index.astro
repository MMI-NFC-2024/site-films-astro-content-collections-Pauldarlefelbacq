---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";

const personnes = await getCollection("personnes");
---
<Layout titre = "tous les personnes">
    <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 list-none p-12">
        {personnes.map(personne =>
        <li class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300"> 
            <a class="group block" href={`/personnes/${personne.id}`}>
                <div class="relative h-64 overflow-hidden bg-gray-200">
                    {
                        personne.data.image && (
                            <Image 
                                src={personne.data.image} 
                                alt={`photo de ${personne.data.nom}`} 
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                data-pagefind-meta="image[src], image_alt[alt]" 
                            />
                        )
                    }
                    {
                        !personne.data.image && (
                            <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-300 to-gray-400">
                                <span class="text-6xl font-bold text-white opacity-50">
                                    {personne.data.nom.charAt(0)}
                                </span>
                            </div>
                        )
                    }
                </div>
                <div class="p-4">
                    <h2 class="text-xl font-bold text-gray-800 group-hover:text-blue-600 transition-colors duration-300">
                        {personne.data.nom}
                    </h2>
                    {personne.data.professions && (
                        <div class="flex flex-wrap gap-2 mt-2">
                            {personne.data.professions.map(profession => (
                                <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-full">
                                    {profession}
                                </span>
                            ))}
                        </div>
                    )}
                </div>
            </a>
        </li>
        )}
    </ul>
</Layout>