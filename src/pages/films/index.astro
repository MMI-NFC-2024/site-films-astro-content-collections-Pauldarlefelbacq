---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import placeholder from "../../assets/films/placeholder_films.jpeg"

const films = await getCollection("films");
---
<Layout titre = "tous les films">
    <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 list-none p-12">
        {films.map(film =>
        <li class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300"> 
            <a class="group block" href={`/films/${film.id}`}>
                <div class="relative h-64 overflow-hidden bg-gray-200">
                    {
                        film.data.image && (
                            <Image 
                                src={film.data.image} 
                                alt={`photo de ${film.data.nom}`} 
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                data-pagefind-meta="image[src], image_alt[alt]" 
                            />
                        )
                    }
                    {
                        !film.data.image && (
                            <img 
                                src={placeholder.src} 
                                alt={`photo de ${film.data.nom}`}
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            />
                        )
                    }
                </div>
                <div class="p-4">
                    <h2 class="text-xl font-bold text-gray-800 group-hover:text-blue-600 transition-colors duration-300">
                        {film.data.nom}
                    </h2>
                    {film.data.genres && (
                        <div class="flex flex-wrap gap-2 mt-2">
                            {film.data.genres.map(genre => (
                                <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-full">
                                    {genre}
                                </span>
                            ))}
                        </div>
                    )}
                </div>
            </a>
        </li>
        )}
    </ul>
</Layout>